<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #4361ee;
            --primary-light: #eef2ff;
            --secondary-color: #3f37c9;
            --success-color: #4cc9f0;
            --warning-color: #f8961e;
            --danger-color: #f94144;
            --text-color: #2b2d42;
            --light-gray: #f8f9fa;
            --medium-gray: #e9ecef;
            --dark-gray: #6c757d;
            --white: #ffffff;
            --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
            --shadow-hover: 0 8px 16px rgba(0, 0, 0, 0.12);
            --border-radius: 12px;
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            color: var(--text-color);
            background-color: var(--light-gray);
            line-height: 1.6;
        }

        .main-content {
            margin-left: 270px;
            min-height: 100vh;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        @media (max-width: 1000px) {
            .main-content {
                margin-left: 0;
            }
        }

        .container {
            padding: 1.5rem;
            background: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
        }

        .profile-header {
            text-align: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--medium-gray);
            position: relative;
        }

        .profile-img-container {
            position: relative;
            display: inline-block;
            margin-bottom: 1rem;
        }

        .profile-img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid var(--primary-color);
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

        .profile-img:hover {
            transform: scale(1.05);
            cursor: pointer;
        }

        .profile-img-overlay {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background: var(--primary-color);
            color: white;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            opacity: 0;
            transition: var(--transition);
        }

        .profile-img-container:hover .profile-img-overlay {
            opacity: 1;
        }

        h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .designation {
            color: var(--primary-color);
            font-size: 1.1rem;
            font-weight: 600;
            background: var(--primary-light);
            display: inline-block;
            padding: 0.3rem 1rem;
            border-radius: 20px;
            margin-bottom: 1rem;
        }

        .employee-id {
            color: var(--dark-gray);
            font-weight: 500;
        }

        .profile-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .profile-section {
            background: linear-gradient(to bottom right, var(--light-gray), var(--white));
            border-left: 4px solid var(--primary-color);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

        .profile-section:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

        .profile-section h3 {
            margin-bottom: 1rem;
            color: var(--primary-color);
            border-bottom: 2px solid var(--medium-gray);
            padding-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .profile-section h3 i {
            font-size: 1.2rem;
        }

        .info-item {
            display: flex;
            margin-bottom: 1rem;
            flex-wrap: wrap;
            align-items: flex-start;
        }

        .info-label {
            font-weight: 600;
            min-width: 150px;
            padding: 0.5rem 0;
        }

        .info-value {
            color: var(--text-color);
            flex: 1;
            padding: 0.5rem 0;
        }

        .document-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
            background: var(--primary-light);
            transition: var(--transition);
        }

        .document-link:hover {
            background: var(--primary-color);
            color: white;
            transform: translateY(-2px);
        }

        .text-muted {
            color: var(--dark-gray);
            font-style: italic;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            margin-top: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            font-size: 1rem;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            min-width: 160px;
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: var(--white);
        }

        .btn-primary:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
        }

        .btn-outline {
            background-color: transparent;
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
        }

        .btn-outline:hover {
            background-color: var(--primary-color);
            color: var(--white);
        }

        #editProfileForm {
            display: none;
            margin-top: 2rem;
            background: var(--light-gray);
            padding: 2rem;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            border-top: 4px solid var(--primary-color);
        }

        .form-title {
            color: var(--primary-color);
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid var(--medium-gray);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .form-title i {
            font-size: 1.5rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 1rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: block;
            color: var(--text-color);
        }

        .form-group label.required::after {
            content: " *";
            color: var(--danger-color);
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            border-radius: 8px;
            border: 1px solid var(--medium-gray);
            transition: var(--transition);
            font-family: 'Open Sans', sans-serif;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
        }

        .form-control.error {
            border-color: var(--danger-color);
        }

        .form-control.success {
            border-color: #4CAF50;
        }

        .form-control:disabled {
            background-color: #f5f5f5;
            cursor: not-allowed;
        }

        .error-message {
            color: var(--danger-color);
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: none;
        }

        .file-upload-wrapper {
            position: relative;
            overflow: hidden;
            display: inline-block;
            width: 100%;
        }

        .file-upload-wrapper input[type="file"] {
            position: absolute;
            left: 0;
            top: 0;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        .file-upload-button {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            background-color: var(--white);
            color: var(--text-color);
            padding: 0.75rem 1rem;
            border-radius: 8px;
            border: 1px dashed var(--dark-gray);
            transition: var(--transition);
            text-align: center;
            cursor: pointer;
        }

        .file-upload-button:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
        }

        .file-name {
            margin-top: 0.5rem;
            font-size: 0.875rem;
            color: var(--dark-gray);
            display: none;
        }

        .upload-hint {
            font-size: 0.8rem;
            color: var(--dark-gray);
            margin-top: 0.25rem;
        }

        .form-section {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--medium-gray);
        }

        .form-section-title {
            color: var(--primary-color);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-actions {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .status-badge {
            display: inline-block;
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
        }

        .status-active {
            background-color: rgba(76, 201, 240, 0.2);
            color: #4cc9f0;
        }

        @media (max-width: 768px) {
            .profile-content {
                grid-template-columns: 1fr;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .btn {
                width: 100%;
            }

            .info-label {
                min-width: 120px;
            }
        }

        @media (max-width: 480px) {
            .profile-img {
                width: 120px;
                height: 120px;
            }

            #editProfileForm {
                padding: 1.25rem;
            }

            .container {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/sidebar') %>
    
    <div class="main-content">
        <div class="container">
            <div class="profile-header">
                <div class="profile-img-container">
                    <img class="profile-img"
                         src="<%= employee.photo ? employee.photo : 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png' %>"
                         alt="Profile Picture" id="profileImage">
                    <% if (editable) { %>
                    <div class="profile-img-overlay" onclick="triggerFileUpload('photo')">
                        <i class="fas fa-camera"></i>
                    </div>
                    <% } %>
                </div>
                <h2><%= employee.name %></h2>
                <div class="designation"><%= employee.designation %></div>
                <div class="employee-id">Employee ID: <%= employee.emp_id %></div>
            </div>

            <div class="profile-content">
                <div class="profile-section">
                    <h3><i class="fas fa-user-circle"></i> Personal Information</h3>
                    <div class="info-item">
                        <span class="info-label">Email:</span>
                        <span class="info-value"><%= employee.email %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Phone:</span>
                        <span class="info-value"><%= employee.emp_number %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Date of Birth:</span>
                        <span class="info-value"><%= employee.dob %></span>
                    </div>
                </div>

                <div class="profile-section">
                    <h3><i class="fas fa-briefcase"></i> Employment Details</h3>
                    <div class="info-item">
                        <span class="info-label">Joining Date:</span>
                        <span class="info-value"><%= employee.joining_date %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Assigned City:</span>
                        <span class="info-value"><%= employee.assign_city %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Department:</span>
                        <span class="info-value"><%= employee.role || 'Not specified' %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Status:</span>
                        <span class="info-value status-badge status-active">Active</span>
                    </div>
                </div>

                <div class="profile-section">
                    <h3><i class="fas fa-file-alt"></i> Documents</h3>
                    <div class="info-item">
                        <span class="info-label">Aadhar Card:</span>
                        <% if (employee.aadhar_card) { %>
                            <a href="<%= employee.aadhar_card %>" target="_blank" class="document-link">
                                <i class="fas fa-eye"></i> View
                            </a>
                        <% } else { %>
                            <span class="text-muted">Not uploaded</span>
                        <% } %>
                    </div>
                    <div class="info-item">
                        <span class="info-label">PAN Card:</span>
                        <% if (employee.pan_card) { %>
                            <a href="<%= employee.pan_card %>" target="_blank" class="document-link">
                                <i class="fas fa-eye"></i> View
                            </a>
                        <% } else { %>
                            <span class="text-muted">Not uploaded</span>
                        <% } %>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Passbook:</span>
                        <% if (employee.passbook_image) { %>
                            <a href="<%= employee.passbook_image %>" target="_blank" class="document-link">
                                <i class="fas fa-eye"></i> View
                            </a>
                        <% } else { %>
                            <span class="text-muted">Not uploaded</span>
                        <% } %>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Offer Letter:</span>
                        <% if (employee.offer_letter) { %>
                            <a href="<%= employee.offer_letter %>" target="_blank" class="document-link">
                                <i class="fas fa-eye"></i> View
                            </a>
                        <% } else { %>
                            <span class="text-muted">Not uploaded</span>
                        <% } %>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Experience Letter:</span>
                        <% if (employee.last_company_experience_letter) { %>
                            <a href="<%= employee.last_company_experience_letter %>" target="_blank" class="document-link">
                                <i class="fas fa-eye"></i> View
                            </a>
                        <% } else { %>
                            <span class="text-muted">Not uploaded</span>
                        <% } %>
                    </div>
                </div>
            </div>

            <% if (editable) { %>
                <div class="action-buttons">
                    <button class="btn btn-primary" onclick="openEditForm()">
                        <i class="fas fa-edit"></i> Edit Profile
                    </button>
                    <button class="btn btn-outline" onclick="window.location.href='/dashboard/employee/home'">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </button>
                </div>

                <form id="editProfileForm" action="/dashboard/employee/profile/update" method="POST" enctype="multipart/form-data" novalidate>
                    <h3 class="form-title"><i class="fas fa-user-edit"></i> Edit Profile</h3>
                    
                    <div class="form-section">
                        <h4 class="form-section-title"><i class="fas fa-info-circle"></i> Basic Information</h4>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="name" class="required">Full Name</label>
                                <input type="text" id="name" name="name" class="form-control" 
                                       value="<%= employee.name %>" required>
                                <div class="error-message" id="name-error">Please enter a valid name</div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="required">Email Address</label>
                                <input type="email" id="email" name="email" class="form-control" 
                                       value="<%= employee.email %>" required>
                                <div class="error-message" id="email-error">Please enter a valid email address</div>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="emp_number" class="required">Phone Number</label>
                                <input type="tel" id="emp_number" name="emp_number" class="form-control" 
                                       value="<%= employee.emp_number %>" required>
                                <div class="error-message" id="emp_number-error">Please enter a valid 10-digit phone number</div>
                            </div>
                            <div class="form-group">
                                <label for="dob" class="required">Date of Birth</label>
                                <input type="date" id="dob" name="dob" class="form-control"
                                       value="<%= employee.dob ? new Date(employee.dob).toISOString().split('T')[0] : '' %>" required>
                                <div class="error-message" id="dob-error">Please enter a valid date of birth</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-section">
                        <h4 class="form-section-title"><i class="fas fa-briefcase"></i> Employment Information</h4>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="designation" class="required">Designation</label>
                                <input type="text" id="designation" name="designation" class="form-control" 
                                       value="<%= employee.designation %>" required>
                                <div class="error-message" id="designation-error">Please enter your designation</div>
                            </div>
                            <div class="form-group">
                                <label for="role">Department/Role</label>
                                <input type="text" id="role" name="role" class="form-control" 
                                       value="<%= employee.role %>" disabled>
                                <div class="upload-hint">Contact HR to change department/role</div>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="joining_date" class="required">Joining Date</label>
                                <input type="date" id="joining_date" name="joining_date" class="form-control"
                                       value="<%= employee.joining_date ? new Date(employee.joining_date).toISOString().split('T')[0] : '' %>" required>
                                <div class="error-message" id="joining_date-error">Please enter a valid joining date</div>
                            </div>
                            <div class="form-group">
                                <label for="assign_city">Assigned City</label>
                                <input type="text" id="assign_city" name="assign_city" class="form-control" 
                                       value="<%= employee.assign_city %>">
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-section">
                        <h4 class="form-section-title"><i class="fas fa-file-upload"></i> Document Uploads</h4>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="photo">Profile Photo</label>
                                <div class="file-upload-wrapper">
                                    <div class="file-upload-button">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <span>Choose Profile Photo</span>
                                    </div>
                                    <input type="file" id="photo" name="photo" accept="image/*" onchange="updateFileName(this, 'photo-name')">
                                </div>
                                <div class="file-name" id="photo-name"></div>
                                <div class="upload-hint">JPG, PNG or GIF (Max 5MB)</div>
                            </div>
                            <div class="form-group">
                                <label for="aadhar_card">Aadhar Card</label>
                                <div class="file-upload-wrapper">
                                    <div class="file-upload-button">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <span>Choose Aadhar Card</span>
                                    </div>
                                    <input type="file" id="aadhar_card" name="aadhar_card" accept=".pdf,.jpg,.jpeg,.png" onchange="updateFileName(this, 'aadhar-name')">
                                </div>
                                <div class="file-name" id="aadhar-name"></div>
                                <div class="upload-hint">PDF, JPG or PNG (Max 10MB)</div>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="pan_card">PAN Card</label>
                                <div class="file-upload-wrapper">
                                    <div class="file-upload-button">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <span>Choose PAN Card</span>
                                    </div>
                                    <input type="file" id="pan_card" name="pan_card" accept=".pdf,.jpg,.jpeg,.png" onchange="updateFileName(this, 'pan-name')">
                                </div>
                                <div class="file-name" id="pan-name"></div>
                                <div class="upload-hint">PDF, JPG or PNG (Max 10MB)</div>
                            </div>
                            <div class="form-group">
                                <label for="passbook_image">Passbook</label>
                                <div class="file-upload-wrapper">
                                    <div class="file-upload-button">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <span>Choose Passbook</span>
                                    </div>
                                    <input type="file" id="passbook_image" name="passbook_image" accept=".pdf,.jpg,.jpeg,.png" onchange="updateFileName(this, 'passbook-name')">
                                </div>
                                <div class="file-name" id="passbook-name"></div>
                                <div class="upload-hint">PDF, JPG or PNG (Max 10MB)</div>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="offer_letter">Offer Letter</label>
                                <div class="file-upload-wrapper">
                                    <div class="file-upload-button">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <span>Choose Offer Letter</span>
                                    </div>
                                    <input type="file" id="offer_letter" name="offer_letter" accept=".pdf,.jpg,.jpeg,.png" onchange="updateFileName(this, 'offer-name')">
                                </div>
                                <div class="file-name" id="offer-name"></div>
                                <div class="upload-hint">PDF, JPG or PNG (Max 10MB)</div>
                            </div>
                            <div class="form-group">
                                <label for="last_company_experience_letter">Experience Letter</label>
                                <div class="file-upload-wrapper">
                                    <div class="file-upload-button">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <span>Choose Experience Letter</span>
                                    </div>
                                    <input type="file" id="last_company_experience_letter" name="last_company_experience_letter" accept=".pdf,.jpg,.jpeg,.png" onchange="updateFileName(this, 'experience-name')">
                                </div>
                                <div class="file-name" id="experience-name"></div>
                                <div class="upload-hint">PDF, JPG or PNG (Max 10MB)</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <button type="button" class="btn btn-outline" onclick="closeEditForm()">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                    </div>
                </form>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Form validation functions
        function validateName(name) {
            const nameRegex = /^[A-Za-z\s]{2,50}$/;
            return nameRegex.test(name.trim());
        }

        function validateEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email.trim());
        }

        function validatePhone(phone) {
            const phoneRegex = /^[0-9]{10}$/;
            return phoneRegex.test(phone.trim());
        }

        function validateDate(date) {
            if (!date) return false;
            const selectedDate = new Date(date);
            const today = new Date();
            return selectedDate <= today;
        }

        function validateJoiningDate(date, dob) {
            if (!date || !dob) return true;
            const joiningDate = new Date(date);
            const dobDate = new Date(dob);
            return joiningDate >= dobDate;
        }

        function validateFile(fileInput, maxSizeMB) {
            if (fileInput.files.length === 0) return true; // No file is acceptable
            const file = fileInput.files[0];
            const maxSize = maxSizeMB * 1024 * 1024; // Convert MB to bytes
            return file.size <= maxSize;
        }

        function showError(inputId, errorId, message) {
            const input = document.getElementById(inputId);
            const error = document.getElementById(errorId);
            input.classList.add('error');
            input.classList.remove('success');
            error.textContent = message;
            error.style.display = 'block';
        }

        function showSuccess(inputId, errorId) {
            const input = document.getElementById(inputId);
            const error = document.getElementById(errorId);
            input.classList.remove('error');
            input.classList.add('success');
            error.style.display = 'none';
        }

        // Form submission validation
        document.getElementById('editProfileForm').addEventListener('submit', function(event) {
            event.preventDefault();
            
            let isValid = true;
            
            // Validate name
            const name = document.getElementById('name').value;
            if (!validateName(name)) {
                showError('name', 'name-error', 'Please enter a valid name (2-50 characters, letters only)');
                isValid = false;
            } else {
                showSuccess('name', 'name-error');
            }
            
            // Validate email
            const email = document.getElementById('email').value;
            if (!validateEmail(email)) {
                showError('email', 'email-error', 'Please enter a valid email address');
                isValid = false;
            } else {
                showSuccess('email', 'email-error');
            }
            
            // Validate phone
            const phone = document.getElementById('emp_number').value;
            if (!validatePhone(phone)) {
                showError('emp_number', 'emp_number-error', 'Please enter a valid 10-digit phone number');
                isValid = false;
            } else {
                showSuccess('emp_number', 'emp_number-error');
            }
            
            // Validate DOB
            const dob = document.getElementById('dob').value;
            if (!validateDate(dob)) {
                showError('dob', 'dob-error', 'Please enter a valid date of birth');
                isValid = false;
            } else {
                showSuccess('dob', 'dob-error');
            }
            
            // Validate designation
            const designation = document.getElementById('designation').value;
            if (!designation.trim()) {
                showError('designation', 'designation-error', 'Please enter your designation');
                isValid = false;
            } else {
                showSuccess('designation', 'designation-error');
            }
            
            // Validate joining date
            const joiningDate = document.getElementById('joining_date').value;
            if (!validateDate(joiningDate)) {
                showError('joining_date', 'joining_date-error', 'Please enter a valid joining date');
                isValid = false;
            } else if (!validateJoiningDate(joiningDate, dob)) {
                showError('joining_date', 'joining_date-error', 'Joining date cannot be before date of birth');
                isValid = false;
            } else {
                showSuccess('joining_date', 'joining_date-error');
            }
            
            // Validate file sizes
            const photoInput = document.getElementById('photo');
            if (!validateFile(photoInput, 5)) {
                Swal.fire({
                    icon: 'error',
                    title: 'File Too Large',
                    text: 'Profile photo must be 5MB or less'
                });
                isValid = false;
            }
            
            const aadharInput = document.getElementById('aadhar_card');
            if (!validateFile(aadharInput, 10)) {
                Swal.fire({
                    icon: 'error',
                    title: 'File Too Large',
                    text: 'Aadhar card must be 10MB or less'
                });
                isValid = false;
            }
            
            const panInput = document.getElementById('pan_card');
            if (!validateFile(panInput, 10)) {
                Swal.fire({
                    icon: 'error',
                    title: 'File Too Large',
                    text: 'PAN card must be 10MB or less'
                });
                isValid = false;
            }
            
            // If all validations pass, submit the form
            if (isValid) {
                this.submit();
            } else {
                // Scroll to first error
                const firstError = document.querySelector('.error');
                if (firstError) {
                    firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    firstError.focus();
                }
            }
        });

        // Real-time validation
        document.getElementById('name').addEventListener('input', function() {
            if (validateName(this.value)) {
                showSuccess('name', 'name-error');
            }
        });

        document.getElementById('email').addEventListener('input', function() {
            if (validateEmail(this.value)) {
                showSuccess('email', 'email-error');
            }
        });

        document.getElementById('emp_number').addEventListener('input', function() {
            if (validatePhone(this.value)) {
                showSuccess('emp_number', 'emp_number-error');
            }
        });

        // Helper functions
        function openEditForm() {
            document.getElementById('editProfileForm').style.display = 'block';
            window.scrollTo({ 
                top: document.getElementById('editProfileForm').offsetTop - 20, 
                behavior: 'smooth' 
            });
        }

        function closeEditForm() {
            document.getElementById('editProfileForm').style.display = 'none';
            // Reset validation states
            const errorMessages = document.querySelectorAll('.error-message');
            errorMessages.forEach(error => error.style.display = 'none');
            
            const formInputs = document.querySelectorAll('.form-control');
            formInputs.forEach(input => {
                input.classList.remove('error');
                input.classList.remove('success');
            });
        }

        function triggerFileUpload(inputId) {
            document.getElementById(inputId).click();
        }

        function updateFileName(input, nameElementId) {
            const fileNameElement = document.getElementById(nameElementId);
            if (input.files.length > 0) {
                const fileName = input.files[0].name;
                fileNameElement.textContent = fileName;
                fileNameElement.style.display = 'block';
                
                // Update profile image preview if it's the photo input
                if (input.id === 'photo' && input.files && input.files[0]) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        document.getElementById('profileImage').src = e.target.result;
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            } else {
                fileNameElement.style.display = 'none';
            }
        }

        // Handle success/error messages from URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get("success") === "true") {
            Swal.fire({ 
                title: "Success!", 
                text: "Profile updated successfully.", 
                icon: "success",
                confirmButtonColor: "#4361ee"
            }).then(() => {
                window.history.replaceState({}, document.title, window.location.pathname);
            });
        } else if (urlParams.get("error")) {
            Swal.fire({ 
                title: "Error!", 
                text: decodeURIComponent(urlParams.get("error")), 
                icon: "error",
                confirmButtonColor: "#4361ee"
            }).then(() => {
                window.history.replaceState({}, document.title, window.location.pathname);
            });
        }
    </script>
</body>
