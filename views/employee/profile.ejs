<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --success-color: #4cc9f0;
            --text-color: #2b2d42;
            --light-gray: #f8f9fa;
            --medium-gray: #e9ecef;
            --dark-gray: #6c757d;
            --white: #ffffff;
            --shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            --border-radius: 12px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            color: var(--text-color);
            background-color: var(--light-gray);
            line-height: 1.6;
        }

        .main-content {
            margin-left: 270px;
            height: 100vh;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        @media (max-width: 1000px) {
            .main-content {
                margin-left: 0;
            }
        }

        .container {
            /* max-width: 1000px; */
            /* margin: 2rem auto;    */
            /* display: grid;
            align-content: space-evenly;
            height: 100%; */
            padding: 1.5rem;
            background: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
        }

        .profile-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .profile-img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid var(--primary-color);
            margin-bottom: 1rem;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease;
        }

        .profile-img:hover {
            transform: scale(1.05);
            cursor: pointer;
        }

        h2 {
            font-size: 2rem;
            font-weight: 700;
        }

        .designation {
            color: var(--dark-gray);
            font-size: 1.1rem;
            font-weight: 500;
        }

        .profile-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .profile-section {
            background: linear-gradient(to bottom right, var(--light-gray), var(--white));
            border-left: 4px solid var(--primary-color);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease;
        }

        .profile-section:hover {
            transform: translateY(-5px);
        }

        .profile-section h3 {
            margin-bottom: 1rem;
            color: var(--primary-color);
            border-bottom: 2px solid var(--medium-gray);
            padding-bottom: 0.5rem;
        }

        .info-item {
            display: flex;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

        .info-label {
            font-weight: 600;
            min-width: 150px;
        }

        .info-value {
            color: var(--dark-gray);
            flex: 1;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            margin-top: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            font-size: 1rem;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: var(--white);
        }

        .btn-primary:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
        }

        .btn-outline {
            background-color: transparent;
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
        }

        .btn-outline:hover {
            background-color: var(--primary-color);
            color: var(--white);
        }

        #editProfileForm {
            display: none;
            margin-top: 2rem;
            background: var(--light-gray);
            padding: 2rem;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            font-size: 1rem;
            border-radius: 5px;
            border: 1px solid var(--medium-gray);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
        }

        @media (max-width: 768px) {
            .profile-content {
                grid-template-columns: 1fr;
            }

            .btn {
                width: 100%;
            }
        }

        @media (max-width: 480px) {
            .profile-img {
                width: 100px;
                height: 100px;
            }

            #editProfileForm {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/sidebar') %>

    <div class="main-content">
        <div class="container">
            <div class="profile-header">
                <img class="profile-img"
                     src="<%= employee.photo ? employee.photo : 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png' %>"
                     alt="Profile Picture">
                <h2><%= employee.name %></h2>
                <div class="designation"><%= employee.designation %></div>
            </div>

            <div class="profile-content">
                <div class="profile-section">
                    <h3>Personal Information</h3>
                    <div class="info-item"><span class="info-label">Employee ID:</span><span class="info-value"><%= employee.emp_id %></span></div>
                    <div class="info-item"><span class="info-label">Email:</span><span class="info-value"><%= employee.email %></span></div>
                    <div class="info-item"><span class="info-label">Phone:</span><span class="info-value"><%= employee.emp_number %></span></div>
                    <div class="info-item"><span class="info-label">Date of Birth:</span><span class="info-value"><%= employee.dob %></span></div>
                </div>

                <div class="profile-section">
                    <h3>Employment Details</h3>
                    <div class="info-item"><span class="info-label">Joining Date:</span><span class="info-value"><%= employee.joining_date %></span></div>
                    <div class="info-item"><span class="info-label">Assigned City:</span><span class="info-value"><%= employee.assign_city %></span></div>
                    <div class="info-item"><span class="info-label">Department:</span><span class="info-value"><%= employee.department || 'Not specified' %></span></div>
                    <div class="info-item"><span class="info-label">Status:</span><span class="info-value">Active</span></div>
                </div>
            </div>

            <% if (editable) { %>
                <div class="action-buttons">
                    <button class="btn btn-primary" onclick="openEditForm()"><i class="fas fa-edit"></i> Edit Profile</button>
                    <button class="btn btn-outline" onclick="window.location.href='/dashboard/employee/home'"><i class="fas fa-arrow-left"></i> Back to Dashboard</button>
                </div>

                <form id="editProfileForm" action="/dashboard/employee/profile/update" method="POST">
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= employee.name %>" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= employee.email %>" required>
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" name="phone" value="<%= employee.emp_number %>" required>
                    </div>
                    <div class="form-group">
                        <label for="dob">Date of Birth</label>
                        <input type="date" class="form-control" id="dob" name="dob" value="<%= employee.dob %>" required>
                    </div>

                    <div class="action-buttons">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save Changes</button>
                        <button type="button" class="btn btn-outline" onclick="closeEditForm()"><i class="fas fa-times"></i> Cancel</button>
                    </div>
                </form>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        function openEditForm() {
            document.getElementById('editProfileForm').style.display = 'block';
            window.scrollTo({
                top: document.getElementById('editProfileForm').offsetTop - 20,
                behavior: 'smooth'
            });
        }

        function closeEditForm() {
            document.getElementById('editProfileForm').style.display = 'none';
        }

        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get("success") === "true") {
            Swal.fire({
                title: "Success!",
                text: "Profile updated successfully.",
                icon: "success",
                confirmButtonText: "OK",
                confirmButtonColor: "#4361ee"
            }).then(() => {
                const cleanUrl = window.location.href.split('?')[0];
                window.history.replaceState({}, document.title, cleanUrl);
            });
        } else if (urlParams.get("error")) {
            Swal.fire({
                title: "Error!",
                text: decodeURIComponent(urlParams.get("error")),
                icon: "error",
                confirmButtonText: "Try Again",
                confirmButtonColor: "#4361ee"
            }).then(() => {
                const cleanUrl = window.location.href.split('?')[0];
                window.history.replaceState({}, document.title, cleanUrl);
            });
        }
    </script>
</body>
</html>
