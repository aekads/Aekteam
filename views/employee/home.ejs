                        <!-- Profile Card -->
                        <div class="col-md-6 col-xl-3">
                            <div class="card shadow-sm h-100">
                                <div class="card-body">
                                    <h5 class="card-title mb-1"><%= employee.name %></h5>
                                    <p class="text-muted mb-0">Role: <%= employee.role %></p>
