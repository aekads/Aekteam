<form action="/api/edit/<%= employee.emp_id %>" method="POST">
    <label>Emp ID:</label>
    <input type="text" name="emp_id" value="<%= employee.emp_id %>" readonly />

    <label>Name:</label>
    <input type="text" name="name" value="<%= employee.name %>"  />

    <label>Emp Number:</label>
    <input type="text" name="emp_number" value="<%= employee.emp_number %>"  />

    <label>Email:</label>
    <input type="email" name="email" value="<%= employee.email %>" />

    <label for="role">Role:</label>
    <select id="role" name="role" >
        <option value="" disabled>Select Role</option>
        <option value="sales" <%= employee.role === 'sales' ? 'selected' : '' %>>Sales</option>
        <option value="acquisition" <%= employee.role === 'acquisition' ? 'selected' : '' %>>Acquisition</option>
        <option value="admin" <%= employee.role === 'admin' ? 'selected' : '' %>>Admin</option>
        <option value="Screen_creator" <%= employee.role === 'Screen_creator' ? 'selected' : '' %>>Screen Creator</option>
        <option value="maintenance" <%= employee.role === 'maintenance' ? 'selected' : '' %>>Maintenance</option>
        <option value="IT_Team" <%= employee.role === 'IT_Team' ? 'selected' : '' %>>IT_Team</option>
        <option value="Office_staff" <%= employee.role === 'Office_staff' ? 'selected' : '' %>>Office_Staff</option>
        <option value="telly_sales" <%= employee.role === 'telly_sales' ? 'selected' : '' %>>Telly_Sales</option>
        <option value="graphic_team" <%= employee.role === 'graphic_team' ? 'selected' : '' %>>Graphic_Team</option>
        <option value="POP_team" <%= employee.role === 'POP_team' ? 'selected' : '' %>>POP_Team</option>
    </select>
    

    <label>Assign City:</label>
    <input type="text" name="assign_city" value="<%= employee.assign_city %>"  />

    <button type="submit">Update</button>
</form>
<style>
    form {
    width: 400px;
    margin: 20px auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 8px;
    background-color: #f9f9f9;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
}

label {
    display: block;
    font-weight: bold;
    margin-top: 10px;
}

input {
    width: 100%;
    padding: 8px;
    margin-top: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
}

input[readonly] {
    background-color: #e9ecef;
}

button {
    width: 100%;
    padding: 10px;
    margin-top: 15px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
}

button:hover {
    background-color: #0056b3;
}

</style>