<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leave History</title>
    <link rel="stylesheet" href="/styles.css">

    <style>
        /* General Styling */
body {
    font-family: Open Sans, sans-serif;
    font-size: 14px;
    font-weight: 400;
    font-style: normal;
    font-stretch: normal;
    line-height: normal;
    letter-spacing: normal;
    text-align: left;
    color: #3b4452;
    background-color: #f7f7f7;
}

/* Sidebar Styling */
.sidebar {
    width: 250px;
    height: 100vh;
    background-color: #2c3e50;
    color: white;
    position: fixed;
    left: 0;
    top: 0;
    padding: 20px;
}

.sidebar .profile {
    text-align: center;
    margin-bottom: 20px;
}

.sidebar img.profile-photo {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 3px solid white;
}

/* Container Styling */
.container {
    margin-left: 315px ;
    padding: 20px;
    background-color: white;
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    max-width: auto;
}

/* Heading */
h2 {
    color: #34495e;
    text-align: center;
    margin-bottom: 20px;
}

/* Form Styling */
.filter-form {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
    padding: 15px;
    background-color: #ecf0f1;
    border-radius: 8px;
    margin-bottom: 20px;
}

.filter-form label {
    font-weight: bold;
    color: #2c3e50;
}

.filter-form select,
.filter-form input[type="date"],
.filter-form button {
    padding: 8px;
    font-size: 14px;
    border-radius: 5px;
    border: 1px solid #ccc;
}

.filter-form button {
    background-color: #2980b9;
    color: white;
    border: none;
    cursor: pointer;
    transition: 0.3s;
}

.filter-form button:hover {
    background-color: #1a5276;
}

/* Table Styling */
table {
    width: 100%;
    border-collapse: collapse;
    background-color: white;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
}

th, td {
    padding: 12px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}

th {
    background-color: #2c3e50;
    color: white;
}

td {
    background-color: #f9f9f9;
}

/* Highlight Alternate Rows */
tbody tr:nth-child(odd) {
    background-color: #f2f2f2;
}

/* No Data Message */
td[colspan="6"] {
    text-align: center;
    font-style: italic;
    color: #7f8c8d;
}

/* Responsive Design */
@media screen and (max-width: 768px) {
    .container {
        margin-left: 0;
        max-width: 100%;
        padding: 10px;
    }
    
    .filter-form {
        flex-direction: column;
        align-items: center;
    }

    table {
        font-size: 12px;
    }

    th, td {
        padding: 8px;
    }
}

    </style>
</head>
<body>

    <%- include('./partials/hrsidebar') %>  

    <div class="container">
        <h2>Leave History</h2>
        <form method="GET" action="/dashboard/hr/leaveHistory" class="filter-form">
            <label>Select Employee:</label>
            <select name="emp_id" required>
                <option value="">-- Select Employee --</option>
                <% employees.forEach(emp => { %>
                    <option value="<%= emp.emp_id %>" <%= filters.emp_id == emp.emp_id ? 'selected' : '' %> >
                        <%= emp.name %>
                    </option>
                <% }) %>
            </select>

            <label>From:</label>
            <input type="date" name="start_date" value="<%= filters.start_date %>">
            
            <label>To:</label>
            <input type="date" name="end_date" value="<%= filters.end_date %>">
            
            <button type="submit">Search</button>
        </form>

        <table border="1">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Name</th>
                    <th>Leave Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% if (leaveData.length > 0) { %>
                    <% leaveData.forEach(leave => { %>
                        <tr>
                            <td><%= leave.emp_id %></td>
                            <td><%= leave.name %></td>
                            <td><%= leave.leave_type %></td>
                            <td><%= new Date(leave.start_date).toLocaleDateString("en-GB", { day: "2-digit", month: "short", year: "numeric" }) %></td>
                            <td><%= new Date(leave.end_date).toLocaleDateString("en-GB", { day: "2-digit", month: "short", year: "numeric" }) %></td>
                            
                            <td><%= leave.status %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6">No leave records found for the selected employee.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

</body>
</html>
