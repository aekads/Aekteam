<%- include('./partials/hrsidebar') %> 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leave Approval Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: Open Sans, sans-serif;
    font-size: 14px;
    font-weight: 400;
    font-style: normal;
    font-stretch: normal;
    line-height: normal;
    letter-spacing: normal;
    text-align: left;
    color: #3b4452;
    background-color: #f7f7f7;
        }
       /* Main container layout */
.container {
    margin-left: 270px; /* Space for the fixed sidebar */
    padding: 20px;
    background: #f8f9fa;
    min-height: 100vh;
}

/* Page Title */
h1 {
    font-size: 26px;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
}

/* Table Styling */
.table-responsive {
    overflow-x: auto;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    background: white;
    padding: 10px;
}

.table {
    width: 100%;
    border-collapse: collapse;
    background: #fff;
    border-radius: 10px;
    overflow: hidden;
}

.table th {
    background: #007bff;
    color: white;
    font-weight: bold;
    padding: 12px;
    text-align: center;
}

.table td {
    padding: 10px;
    text-align: center;
    border-bottom: 1px solid #ddd;
    vertical-align: middle;
}

/* Table Hover Effect */
.table-hover tbody tr:hover {
    background-color: #f1f1f1;
    transition: all 0.3s ease-in-out;
}

/* Status Badge */
.badge {
    padding: 6px 12px;
    font-size: 14px;
    border-radius: 5px;
    font-weight: bold;
}

.bg-success { background: #28a745 !important; color: white; }
.bg-danger { background: #dc3545 !important; color: white; }
.bg-warning { background: #ffc107 !important; color: black; }

/* Buttons */
.btn {
    padding: 8px 14px;
    font-size: 14px;
    border-radius: 5px;
    font-weight: bold;
    transition: all 0.3s ease-in-out;
}

.btn-success:hover { background: #218838; }
.btn-danger:hover { background: #c82333; }

/* Mobile View */
@media (max-width: 768px) {
    .container {
        margin-left: 0;
        padding: 15px;
    }

    .table-responsive {
        overflow-x: scroll;
    }

    h1 {
        font-size: 22px;
    }

    .btn {
        font-size: 12px;
        padding: 6px 10px;
    }
}

    </style>
</head>                                                                         
<body>
   
<div class="container">
    <h1>Leave Approval Dashboard</h1>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Employee Name</th>
                    <th>Leave Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% leaveApplications.forEach(application => { %>
                    <tr>
                        <td><%= application.emp_id %></td>
                        <td><%= application.employee_name || "N/A" %></td> <!-- Ensure you fetch employee name in backend -->
                        <td><%= application.leave_type %></td>
                        <td><%= new Date(application.start_date).toISOString().substring(0, 10) %></td>
                        <td><%= new Date(application.end_date).toISOString().substring(0, 10) %></td>
                        <td>
                            <span class="badge 
                                <%= application.status.toLowerCase() === 'approved' ? 'bg-success' : 
                                    application.status.toLowerCase() === 'rejected' ? 'bg-danger' : 
                                    'bg-warning' %>">
                                <%= application.status %>
                            </span>
                        </td>
                        <td>
                            <% if (application.status.toLowerCase() === 'pending') { %>
                                <form action="/dashboard/hr/approve" method="POST" style="display:inline;">
                                    <input type="hidden" name="leave_id" value="<%= application.id %>">
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>
                                <form action="/dashboard/hr/reject" method="POST" style="display:inline;">
                                    <input type="hidden" name="leave_id" value="<%= application.id %>">
                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                </form>
                            <% } else { %>
                                <span><%= application.status %></span>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<!-- Hidden inputs to carry flash messages -->
<input type="hidden" id="successMessage" value="<%= messages.success ? messages.success[0] : '' %>">
<input type="hidden" id="errorMessage" value="<%= messages.error ? messages.error[0] : '' %>">

<!-- Flash Messages with SweetAlert -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const successMessage = document.getElementById("successMessage").value;
        const errorMessage = document.getElementById("errorMessage").value;

        if (successMessage) {
            Swal.fire({
                title: "Success!",
                text: successMessage,
                icon: "success",
                confirmButtonColor: "#3085d6",
                confirmButtonText: "OK"
            });
        }

        if (errorMessage) {
            Swal.fire({
                title: "Error!",
                text: errorMessage,
                icon: "error",
                confirmButtonColor: "#d33",
                confirmButtonText: "OK"
            });
        }
    });
</script>



</body>
</html>
