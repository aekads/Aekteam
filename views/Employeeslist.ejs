<%- include('./partials/hrsidebar') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Employee List</title>
  <!-- Bootstrap CSS for quick styling -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
/* üåç Global Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* üé® Base */
body {
  font-family: "Segoe UI", Roboto, Arial, sans-serif;
  background: #f5f7fa;
  color: #333;
  line-height: 1.6;
  margin-left: 260px; /* shift for sidebar */
  transition: margin-left 0.3s ease;
}

/* üì¶ Container */
.container {
  max-width: 1200px;
  margin: 30px auto;
  padding: 25px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.container:hover {
  transform: translateY(-2px);
  box-shadow: 0 14px 35px rgba(0, 0, 0, 0.12);
}

/* üè∑Ô∏è Heading */
h2 {
  text-align: center;
  font-size: 26px;
  font-weight: 600;
  margin-bottom: 25px;
  color: #222;
}

/* ‚ûï Add Button */
.add-employee-btn {
  width: 50%;
  display: block;
  padding: 12px 24px;
  margin: 0 auto 20px;
  background: linear-gradient(135deg, #4361ee, #3f37c9);
  color: white;
  border-radius: 50px;
  font-size: 16px;
  font-weight: 600;
  text-decoration: none;
  text-align: center;
  box-shadow: 0 6px 15px rgba(67, 97, 238, 0.3);
  transition: all 0.3s ease;
}

.add-employee-btn:hover {
  background: linear-gradient(135deg, #3f37c9, #4361ee);
  transform: translateY(-2px);
  box-shadow: 0 10px 20px rgba(67, 97, 238, 0.4);
}

/* üìä Table */
table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 15px;
  overflow: hidden;
  border-radius: 12px;
  box-shadow: 0 6px 15px rgba(0, 0, 0, 0.05);
}

thead {
  background: linear-gradient(135deg, #4361ee, #3f37c9);
  color: white;
}

thead th {
  padding: 15px;
  text-align: left;
  font-weight: 600;
  font-size: 15px;
  letter-spacing: 0.5px;
}

tbody tr {
  transition: background 0.25s ease;
}

tbody tr:nth-child(even) {
  background: #f9fbff;
}

tbody tr:hover {
  background: #eef3ff;
}

td {
  padding: 15px;
  font-size: 14px;
  border-bottom: 1px solid #e5e7eb;
}

/* üéØ Actions */
.action-links a {
  margin-right: 12px;
  text-decoration: none;
  font-weight: 600;
  color: #4361ee;
  transition: color 0.3s;
}

.action-links a:hover {
  color: #3f37c9;
  text-decoration: underline;
}

.btn-danger {
  background: #f72585;
  border: none;
  padding: 6px 12px;
  font-size: 13px;
  border-radius: 6px;
  color: #fff !important;
  font-weight: 600;
  box-shadow: 0 4px 10px rgba(247, 37, 133, 0.3);
  transition: background 0.3s ease, transform 0.2s ease;
}

.btn-danger:hover {
  background: #d61a6f;
  transform: scale(1.05);
}

/* üì± Responsive */
@media (max-width: 1024px) {
  body { margin-left: 0; padding-top: 70px; }
  .container { margin: 15px; padding: 20px; }
}

@media (max-width: 768px) {
  table { display: block; overflow-x: auto; white-space: nowrap; }
  h2 { font-size: 22px; }
  /* .add-employee-btn { font-size: 14px; padding: 10px 20px; }  */
}

@media (max-width: 480px) {
  td, th { padding: 10px; font-size: 13px; }
  .btn-danger { font-size: 12px; padding: 5px 10px; }
}

  </style>
</head>
<body>
  
  <div class="container">
    <a href="/dashboard/hr/addEmployee" class="add-employee-btn">Add Employee</a>
    <h2>Employee List</h2>
    <table>
      <thead>
        <tr>
          <th>Emp ID</th>
          <th>Name</th>
          <th>Designation</th>
          <th>Phone</th>
          <th>City</th>
          <th>CTC</th>
       
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(employee => { %>
          <tr>
            <td><%= employee.emp_id %></td>
            <td><%= employee.name %></td>
            <td><%= employee.designation %></td>
            <td><%= employee.emp_number %></td>
            <td><%= employee.assign_city %></td>
            <td><%= employee.ctc %></td>
          
            <td class="action-links">
  
              <!-- View -->
              <a href="/dashboard/hr/employee/<%= employee.emp_id %>" >
                View
              </a>
            
              <!-- Edit -->
              <a href="/dashboard/hr/employee/edit/<%= employee.emp_id %>" 
                 >
                Edit
              </a>
            
              <!-- Delete -->
              <a href="/dashboard/hr/employee/delete/<%= employee.emp_id %>" 
                 onclick="return confirm('Are you sure you want to delete this employee?')"
                >
                Delete
              </a>
            
            </td>
            
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
