<%- include('./partials/hrsidebar') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Employee List</title>
  <!-- Bootstrap CSS for quick styling -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* General Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background: #f4f4f4;
    color: #333;
}

.container {
    max-width: 1200px;
    margin: 20px auto;
    padding: 20px;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #333;
}

.add-employee-btn {
    display: block;
    width: fit-content;
    padding: 10px 15px;
    margin: 10px auto;
    background: #007bff;
    color: white;
    text-decoration: none;
    text-align: center;
    border-radius: 5px;
    font-size: 16px;
    transition: background 0.3s;
}

.add-employee-btn:hover {
    background: #0056b3;
}

/* Table Styles */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    background: white;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

thead {
    background: #007bff;
    color: white;
}

thead th {
    padding: 15px;
    text-align: left;
    border-bottom: 2px solid #ddd;
}

tbody tr {
    border-bottom: 1px solid #ddd;
    transition: background 0.3s;
}

tbody tr:nth-child(even) {
    background: #f9f9f9;
}

tbody tr:hover {
    background: #f1f1f1;
}

td {
    padding: 15px;
}

.action-links a {
    margin-right: 10px;
    text-decoration: none;
    color: #007bff;
    font-weight: bold;
    transition: color 0.3s;
}

.action-links a:hover {
    color: #0056b3;
}

/* Responsive Design */
@media (max-width: 768px) {
    table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
    }

    .container {
        padding: 10px;
    }

    .add-employee-btn {
        text-align: center;
    }
}

  </style>
</head>
<body>
  
  <div class="container">
    <a href="/dashboard/hr/addEmployee" class="add-employee-btn">Add Employee</a>
    <h2>Employee List</h2>
    <table>
      <thead>
        <tr>
          <th>Emp ID</th>
          <th>Name</th>
          <th>Designation</th>
          <th>Phone</th>
          <th>City</th>
          <th>CTC</th>
          <th>Joining Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(employee => { %>
          <tr>
            <td><%= employee.emp_id %></td>
            <td><%= employee.name %></td>
            <td><%= employee.designation %></td>
            <td><%= employee.emp_number %></td>
            <td><%= employee.assign_city %></td>
            <td><%= employee.ctc %></td>
            <td><%= new Date(employee.joining_date).toLocaleDateString("en-GB", { day: "2-digit", month: "2-digit", year: "2-digit" }) %></td>

            <td class="action-links">
              <a href="/dashboard/hr/employee/<%= employee.emp_id %>">View</a> 
              
              <a href="/dashboard/hr/employee/edit/<%= employee.emp_id %>">Edit</a>|
              <a href="/dashboard/hr/employee/delete/<%= employee.emp_id %>" onclick="return confirm('Are you sure?')">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
