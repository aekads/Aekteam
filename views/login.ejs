<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="login-page">
        <!-- Left Side (Image) -->
        <div class="login-left">
            <img src="https://img.freepik.com/free-vector/mobile-login-concept-illustration_114360-83.jpg?semt=ais_hybrid" alt="Illustration">
            
        </div>

        <!-- Right Side (Form) -->
        <div class="login-right">
            <img src="https://cms.aekads.com/images/Logo.png" alt="Logo" class="logo">
            <h2>Login</h2>

            <% if (typeof error !== 'undefined') { %>
                <p class="error-message"><%= error %></p>
            <% } %>

            <form action="/api/login" method="POST">
                <label for="emp_id">Employee ID:</label>
                <input type="text" id="emp_id" name="emp_id" required>

                <label for="pin">PIN:</label>
                <input type="password" id="pin" name="pin" required>

                <button type="submit">Login</button>
            </form>
        </div>
    </div>

    <style>
        /* General Page Styles */
body {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f4f6f9;
}

/* Layout */
.login-page {
    display: flex;
    width: 80%;
    max-width: 1100px;
    height: 80vh;
    background: white;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

/* Left Side - Image */
.login-left {
    width: 50%;
    background: #f4f6f9;
    display: flex;
    justify-content: center;
    align-items: center;
}

.login-left img {
    width: 80%;
}

/* Right Side - Form */
.login-right {
    width: 50%;
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.logo {
    width: 150px;
    margin-bottom: 20px;
}

h2 {
    font-size: 24px;
    color: #3f3377;
}

.error-message {
    color: red;
    font-size: 14px;
    margin-bottom: 10px;
}

form {
    width: 100%;
    max-width: 300px;
}

label {
    display: block;
    font-weight: bold;
    margin-top: 10px;
}

input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    margin-top: 5px;
}

button {
    width: 100%;
    padding: 12px;
    background-color: #3f3377;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-top: 20px;
    transition: 0.3s ease-in-out;
}

button:hover {
    background-color: #2d265a;
}

/* Responsive Design */
@media (max-width: 768px) {
    .login-page {
        flex-direction: column;
        height: auto;
        width: 90%;
    }

    .login-left {
        width: 100%;
        height: 40%;
    }

    .login-right {
        width: 100%;
        padding: 20px;
    }

    .logo {
        width: 120px;
    }
}

    </style>
</body>
</html>
