/* Dropdown Menu */
.sidebar-menu {
    list-style: none;
    padding: 0;
}

.dropdown {
    position: relative;
}

.dropdown-toggle {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 15px;
    border-radius: 5px;
    font-size: 16px;
    color: white;
    text-decoration: none;
    transition: background 0.3s ease-in-out;
}

.dropdown-toggle:hover {
    background: rgba(255, 255, 255, 0.1);
}

.arrow {
    transition: transform 0.3s ease-in-out;
}

.dropdown.open .arrow {
    transform: rotate(90deg);
}

.submenu {
    list-style: none;
    padding-left: 20px;
    display: none;
}

.dropdown.open .submenu {
    display: block;
}

/* Hamburger Menu */
.hamburger {
    display: none;
    font-size: 28px;
    cursor: pointer;
    position: fixed;
    top: 15px;
    left: 15px;
    background: #2c3e50;
    color: white;
    padding: 10px;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
    z-index: 1000;
}

.hamburger:hover {
